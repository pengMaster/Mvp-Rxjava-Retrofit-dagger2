<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AppSplash" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 页面跳转动画-->
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right2middle</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_middle2left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_middle2right</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_in_right2middle</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_out_middle2left</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_out_middle2right</item>

    </style>

    <style name="line_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="windowEnterAnimation">

    </style>
    <style name="windowExitAnimation">

    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWidthAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="MatchHeightAuto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWidthAuto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="WrapHeightAuto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWidth.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidth.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchHeight.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHeight.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchHeightAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchHeightAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWidthAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidthAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapWidthAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapWidthAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapHeightAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapHeightAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="sub_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">@dimen/content_title</item>
    </style>

    <style name="sub_view">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0F7AC2</item>
    </style>

    <style name="sub_RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="act_transparent">
        <item name="android:windowBackground">@color/alpha_45_black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>


    <!-- 基本信息展示 - 左右对其方式 依赖RelatedLayout 左 属性-->
    <style name="WrapWrap.tv_info_left">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/content</item>
    </style>

    <!-- 基本信息展示 - 左右对其方式 右 属性-->
    <style name="WrapWrap.tv_info_right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/content</item>
        <item name="android:gravity">end</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <!-- main_foot ImageView-->
    <style name="main_foot_iv">
        <item name="android:paddingTop">@dimen/base10dp</item>
        <item name="android:paddingBottom">@dimen/base7dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--闪动的大圈圈 Loading-->
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <!-- company_list_tv 默认TextView-->
    <style name="company_list_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content</item>
        <item name="android:textColor">@color/blackAA</item>
    </style>

    <!-- 单位信息 分割线 -->
    <style name="ContentLineLong">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/bjddw_content_bg</item>
    </style>
    <!-- 单位信息布局 -->
    <style name="company_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <!-- 不可改为 padding -->
        <item name="android:paddingLeft">@dimen/base15dp</item>
        <item name="android:paddingRight">@dimen/base15dp</item>
        <item name="android:paddingTop">@dimen/base15dp</item>
        <item name="android:paddingBottom">@dimen/base15dp</item>
    </style>

    <!-- 统一的内容 text view-->
    <style name="record_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/base10dp</item>
        <item name="android:paddingLeft">@dimen/base5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/alpha_90_black</item>
        <item name="android:paddingBottom">@dimen/base5dp</item>
    </style>

    <!-- text title 默认的内容标题-->
    <style name="textTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/base5dp</item>
        <item name="android:paddingBottom">@dimen/base12dp</item>
        <item name="android:paddingLeft">@dimen/base5dp</item>
        <!-- <item name="android:textColor">@color/blue_text</item>-->
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/title_next</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>